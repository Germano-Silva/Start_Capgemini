Algoritmo "Enquanto"
// Aula: Operadores e Exercícios
// Autor: Germano Rodrigues da Silva
// Data atual  : 09/07/2024
Var
   alturaMarcelo, alturaJoao, cresAnualMarcelo, cresAnualJoao: real
   idade: inteiro


Inicio
   alturaMarcelo <- 1.20
   alturaJoao <- 1.05
   cresAnualMarcelo <- 0.02
   cresAnualJoao <- 0.05
   idade <- 8

   Enquanto alturaMarcelo >= alturaJoao faça
      alturaMarcelo <- alturaMarcelo + cresAnualMarcelo
      alturaJoao <- alturaJoao + cresAnualJoao
      idade <- idade + 1
   fimenquanto
   Escreval("Idade: ", idade)
   Escreval("Altura Marcelo: ", alturaMarcelo)
   Escreval("Altura Joao: ", alturaJoao)


Fimalgoritmo